{{#each records}}
<div class="container" style="height: 80px">
  <div class="d-flex row justify-content-center">
    <div class="col-md-3"></div>
    <div class="bg-light row col-md-6">
      <div class="col-md-2 pl-2" style="height: 80px">
        <i class="fas {{{this.category}}} fa-3x text-info pt-3"></i>
      </div>

      <div class="col-md-8" style="height: 80px">
        <h5 class="pt-3">
          {{{this.name}}}
        </h5>
        <h6>
          {{{this.date}}}
        </h6>
      </div>

      <div class="col-md-2" style="height: 80px">
        <h2 class="pt-4 text-left align-middle">
          {{{this.amount}}}
        </h2>
      </div>
    </div>
    <div class="col-md-3">
      <a href="/todos//edit" class="btn mt-4">修改</a>
      <form action="/todos//delete?_method=DELETE" method="post" style="display:inline">
        <button type="submit" class="btn mt-4">刪除</button>
      </form>
    </div>
  </div>
</div>
{{/each}}
<div class="container text-center mt-3">

  <a type="button" href="/records/new" class="btn border border-dark text-white"
    style="width:300px; background-color: orange">新增支出</a>
</div>